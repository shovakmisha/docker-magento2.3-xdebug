<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="footer-container">
            <container name="subscribe.container" before="-" htmlTag="div" htmlClass="subscribe-container">
                <container name="subscribe.container.content" htmlTag="div" htmlClass="subscribe-container-content">
                    <block class="Magento\Newsletter\Block\Subscribe"
                           name="form.subscribe.custom"
                           before="subscribe.container"
                           template="Magento_Newsletter::subscribe.phtml"
                           ifconfig="newsletter/general/active"/>

                    <block class="Magento\Theme\Block\Html\Footer"
                           name="custom_block"
                           as="custom_block"
                           template="Magento_Newsletter::social.phtml" />
                </container>
            </container>
            <referenceContainer name="footer">
                <block name="form.subscribe" remove="true" />
            </referenceContainer>
        </referenceContainer>
    </body>
</page>
