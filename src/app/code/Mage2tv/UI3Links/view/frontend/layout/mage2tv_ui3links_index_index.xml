<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      layout="1column"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="content">
            <block template="links.phtml" class="Mage2tv\UI3Links\Block\Main" name="mage2_ui3_links_name">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="componente-a" xsi:type="array">
                                <item name="component" xsi:type="string">Mage2tv_UI3Links/js/ui-componente-a</item>
                                <item name="label" xsi:type="string">Component A</item>
                            </item>
                            <item name="componente-b" xsi:type="array">
                                <item name="component" xsi:type="string">Mage2tv_UI3Links/js/ui-componente-b</item>
                                <item name="title" xsi:type="string">Component B</item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>

    </body>
</page>
