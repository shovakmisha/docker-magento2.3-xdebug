<?xml version="1.0" encoding="UTF-8"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="ui_users" resource="default" engine="innodb" comment="Ui Users Table">

        <column xsi:type="smallint" name="user_id" padding="6" unsigned="false" nullable="false" identity="true" comment="User ID"/>

        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="User Name"/>

        <column xsi:type="varchar" name="address" nullable="true" comment="User Address"/>

        <column xsi:type="varchar" name="image" nullable="false" length="255" comment="User Icon"/>

        <column xsi:type="timestamp" name="publish_date" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Publish Date"/>

        <column xsi:type="timestamp" name="update_date" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Publish Date"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="user_id"/>
        </constraint>

        <index referenceId="USERS_PAGE_IDENTIFIER" indexType="btree">
            <column name="user_id"/>
        </index>
        <index referenceId="USERS_NAME_ADDRESS" indexType="fulltext">
            <column name="name"/>
            <column name="address"/>
        </index>

    </table>


</schema>
